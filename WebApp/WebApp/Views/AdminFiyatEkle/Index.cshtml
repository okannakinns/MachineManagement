@using WebApp.Models;
@model List<WebApp.Models.Fiyat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-6">
                <section class="panel">
                    <header class="panel-heading">
                        Fiyat (@Model.Count() Adet Kayıt Bulunmaktadır)
                    </header>
                    <div class="panel-body">
                        <form method="post" action="@Url.Action("Ekle", "AdminFiyatEkle")">
                            <div class="form-row">
                                
                                    <div class="form-group col-md-4">
                                        <label for="Adi">Adı</label>
                                    <input required type="text" class="form-control" id="Adi" name="Adi">
                                    </div>
                                <div class="form-group col-md-4">
                                    <label for="MakineTipId">Tip</label>
                                    <select name="MakineTipId" class="form-control" id="MakineTipId">
                                        @foreach (var tip in ViewBag.MakineTip)
                                        {
                                            <option value="@tip.Id">@tip.Adi</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="Saatlik">Saatlik</label>
                                    <input required type="text" class="form-control" id="Saatlik" name="Saatlik" maxlength="6" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="Gunluk">Günlük</label>
                                    <input required type="text" class="form-control" id="Gunluk" name="Gunluk" maxlength="6" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                                </div>
                            </div>




                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </section>

                    </div>
               
            </div>
            <div class="col-lg-5">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div style="margin-top:10px;" class="alert alert-block alert-danger fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <strong>Hata!</strong> @ViewBag.ErrorMessage
                    </div>
                }
            </div>
    </section>
    
</section>
