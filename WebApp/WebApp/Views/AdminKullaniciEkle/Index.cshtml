@using WebApp.Models;
@model List<WebApp.Models.Kullanicilar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-6">
                <section class="panel">
                    <header class="panel-heading">
                        Kullanıcı Ekle
                    </header>
                    <div class="panel-body">
                        <form method="post" action="@Url.Action("Ekle", "AdminKullaniciEkle")" class="form-inline">
                            <div class="form-group col-md-4">
                                <label for="Adi">Adı</label>
                                <input required type="text" class="form-control" id="Adi" name="Adi" minlength="5" maxlength="12">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="Sifre">Şifre</label>
                                <input required type="password" class="form-control" id="Sifre" name="Sifre" minlength="6" maxlength="20">
                            </div>

                            <div class="form-group col-md-12">
                                <button style="margin-top:15px; margin-bottom:10px;" type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="alert alert-block alert-danger fade in">
                                    <button data-dismiss="alert" class="close close-sm" type="button">
                                        <i class="icon-remove"></i>
                                    </button>
                                    <strong>Hata!</strong> @ViewBag.ErrorMessage
                                </div>
                            }
                        </form>

                    </div>
                </section>
            </div>
        </div>
    </section>


    
    </section>


