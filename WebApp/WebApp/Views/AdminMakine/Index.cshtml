@using WebApp.Models;
@model List<WebApp.Models.Makine>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section id="main-content">
    <section class="wrapper">
     
        <section class="panel">
            <header class="panel-heading">
                Makine Tablosu (@Model.Count() Adet Kayıt Bulunmaktadır)
                <form method="post" action="@Url.Action("Index", "AdminMakineEkle")">
                    <div class="col-xs-3 col-sm-3 col-md-4 col-lg-4">
                        <button style="position:fixed; top:80px; right:30px;" type="submit" class="btn btn-success">Ekle</button>
                    </div>
                </form>
            </header>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Adi</th>
                        <th>Tip</th>
                        <th>Plaka</th>
                        <th>Km</th>
                        <th>Durumu</th>
                        <th>Toplam Çalışma</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var Makine in Model)
                    {
                        <tr>
                            <td>@Makine.Marka.Adi</td>
                            <td>@Makine.Model.Adi</td>
                            <td>@Makine.Adi</td>
                            <td>@Makine.MakineTip.Adi</td>
                            <td>@Makine.Plaka</td>
                            <td>@Makine.Km</td>
                            <td>@Makine.MakineDurum.Adi</td>
                            <td>@Makine.ToplamCalismaSaati saat</td>


                            <td>
                                <form method="post" action="@Url.Action("Guncelle", "AdminMakine")" style="display: inline;">
                                    <input type="hidden" name="id" value="@Makine.Id" />
                                    <button type="submit" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>
                                </form>
                                <form method="post" action="@Url.Action("Sil", "AdminMakine")" style="display: inline;">
                                    <input type="hidden" name="id" value="@Makine.Id" />
                                    <button type="submit" class="btn btn-danger btn-xs" onclick="confirmSilme(event)"><i class="icon-trash"></i></button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </section>
</section>
