@using WebApp.Models;
@model Is

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-6">
                <section class="panel">
                    <header class="panel-heading">
                        İş Güncelle
                    </header>
                    <div class="panel-body">
                        <form method="post" action="@Url.Action("Kaydet", "AdminIsGuncelle")">
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label for="Adi">Adı</label>
                                    <input required type="text" class="form-control" id="Adi" name="Adi" value="@Model.Adi">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="MusteriId">Müşteri</label>
                                    <select name="MusteriId" class="form-control" id="MusteriId">
                                        @foreach (var Musteri in ViewBag.Musteriler)
                                        {
                                            <option value="@Musteri.Id" @(Model.MusteriId == Musteri.Id ? "selected" : "")>@Musteri.AdiSoyadi</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="BaslangicTarihi">Başlangıç Tarihi</label>
                                    <input required type="text" class="form-control" id="BaslangicTarihi" name="BaslangicTarihi" value="@Model.BaslangicTarihi">
                                </div>
                            </div>
                            
                            

                            <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id">
                            <input type="hidden" class="form-control" id="OlusturulmaTarihi" name="OlusturulmaTarihi" value="@Model.OlusturulmaTarihi">
                            <input type="hidden" class="form-control" id="GuncellenmeTarihi" name="GuncellenmeTarihi" value="@Model.GuncellenmeTarihi">
                            <input type="hidden" class="form-control" id="Durumu" name="Durumu" value="@Model.Durumu">

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <button type="submit" class="btn btn-info">Kaydet</button>
                                </div>
                            </div>
                        </form>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div style="margin-top:10px;" class="alert alert-block alert-danger fade in">
                                <button data-dismiss="alert" class="close close-sm" type="button">
                                    <i class="icon-remove"></i>
                                </button>
                                <strong>Hata!</strong> @ViewBag.ErrorMessage
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>